<pyvcp>
  <vbox>
   <relief>RIDGE</relief>
   <bd>4</bd>
    <label>
     <text>"Spindle Speed:"</text>
     <font>("Helvetica",9)</font>
    </label>
    <bar>
     <halpin>"spindle-speed"</halpin>
     <max_>24000</max_>
    </bar>
  </vbox>

 <button>
     <halpin>"center-here-xyz"</halpin>
     <text>"SET G54 Center XYZ"</text>
     <font>('Fixed',10)</font>
     <bg>"#7fdbb1"</bg>
     <fg>"#000000"</fg>
 </button>

 <button>
     <halpin>"rapid-to-home"</halpin>
     <text>"GO Home XYZ"</text>
     <font>('Fixed',9)</font>
     <bg>"#ffc1c8"</bg>
     <fg>"#000000"</fg>
 </button>

 <button>
     <halpin>"rapid-to-home-xy"</halpin>
     <text>"GO Home XY"</text>
     <font>('Fixed',9)</font>
     <bg>"#ffc1c8"</bg>
     <fg>"#000000"</fg>
 </button>

 <button>
     <halpin>"go-away-xyz"</halpin>
     <text>"Free Area XYZ"</text>
     <font>('Fixed',9)</font>
     <bg>"#ffc1c8"</bg>
     <fg>"#000000"</fg>
 </button>

 <button>
     <halpin>"recenter"</halpin>
     <text>"Recenter XY"</text>
     <font>('Fixed',9)</font>
     <bg>"#c8ebf7"</bg>
     <fg>"#000000"</fg>
 </button>

 <button>
     <halpin>"find-center"</halpin>
     <text>"Find Center"</text>
     <font>('Fixed',9)</font>
     <bg>"#c8ebf7"</bg>
     <fg>"#000000"</fg>
 </button>

 <button>
     <halpin>"find-rectangle-center"</halpin>
     <text>"Find Rectangle Center"</text>
     <font>('Fixed',9)</font>
     <bg>"#c8ebf7"</bg>
     <fg>"#000000"</fg>
 </button>

 <hbox>
     <relief>GROOVE</relief>
     <bd>2</bd>
     <label>
         <text>"PROBE"</text>
         <font>('Helvetica',13)</font>
     </label>
     <led>
        <halpin>"probe"</halpin>
        <size>23</size>
        <on_color>"green"</on_color>
        <off_color>"red"</off_color>
      </led>

      <checkbutton>
         <halpin>"probe_3d"</halpin>
         <text>"Probe 3D"</text>
         <font>("Helvetica",10)</font>
      </checkbutton>

 </hbox>

 <hbox>
   <relief>GROOVE</relief>
   <bd>4</bd>
   <label>
     <text>"Water Temp:"</text>
     <font>("Helvetica",10)</font>
   </label>
   <number> 
     <halpin>"temperature"</halpin>
     <font>("Helvetica",12)</font>
     <format>"3.1f"</format>
   </number>
  </hbox>
</pyvcp>
